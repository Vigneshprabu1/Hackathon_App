<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f0f2f4"
tools:context="com.example.ss4.hackathons.CollegeList">

<TextView android:textSize="20sp"
    android:textStyle="normal"
    android:textColor="@color/gray_1"
    android:gravity="center"
    android:id="@+id/textViewCreateBasicData"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Choose Your College"
    android:layout_centerHorizontal="true" />


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_below="@id/textViewCreateBasicData">

    <!-- Editext for Search -->
    <EditText android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Your College"
        android:inputType="textVisiblePassword"/>

    <!-- List View -->
    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


</RelativeLayout>
